{
  "title": "Confirm Contact Body Schema",
  "type": "object",
  "properties": {
    "contact": {
      "anyOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "cc": { "type": "string" },
            "number": { "type": "string" }
          },
          "additionalProperties": false,
          "required": ["cc", "number"]
        }
      ]
    },
    "code": { "type": "string", "pattern": "^[0-9]{6}$" }
  },
  "additionalProperties": false,
  "required": ["contact", "code"]
}
