{
  "title": "Credentials Body Schema",
  "type": "object",
  "properties": {
    "id": {
      "anyOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "cc": { "type": "string", "pattern": "^\\+[0-9]{2,3}$" },
            "number": { "type": "string" }
          },
          "additionalProperties": false,
          "required": ["cc", "number"]
        }
      ]
    },
    "credential": { "type": "string" }
  },
  "additionalProperties": false,
  "required": ["id", "credential"]
}
