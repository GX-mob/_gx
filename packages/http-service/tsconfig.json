{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "extends": "@tsconfig/node12/tsconfig.json",
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*.ts",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts",
    "./src/**/*.mock.ts"
  ]
}
