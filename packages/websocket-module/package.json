{
  "name": "@gx-mob/socket.io-module",
  "version": "0.0.1",
  "description": "Attach socket.io server to gx http service with some features.",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "types"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/GX-mob/http-service-template.git"
  },
  "scripts": {
    "start": "node ./dist/bin/index.js",
    "test": "NODE_ENV=test jest --runInBand",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "build": "rimraf ./dist && tsc --sourceMap -p ./",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' --files ./src/bin/index.ts",
    "compile-schemas": "json2ts -i ./src/schemas -o ./src/types"
  },
  "author": "ferco0",
  "license": "MIT",
  "dependencies": {
    "request-ip": "^2.1.3",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.3.0"
  },
  "devDependencies": {
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-redis": "^1.0.26"
  }
}
