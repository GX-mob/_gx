{
  "name": "gx-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "ts-node-script scripts/run-dev.ts",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/common/test/jest-e2e.json"
  },
  "dependencies": {
    "@brazilian-utils/brazilian-utils": "^1.0.0-rc.11",
    "@google-cloud/storage": "^5.3.0",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/platform-fastify": "^7.4.4",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "file-type": "^15.0.0",
    "google-polyline": "^1.0.3",
    "http-errors": "^1.8.0",
    "ioredis": "^4.17.3",
    "jpegtran": "^1.1.0",
    "mongoose": "^5.10.2",
    "pino": "^6.5.1",
    "pngquant": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "schemapack": "^1.4.2",
    "secure-password": "^4.0.0",
    "shortid": "^2.2.15",
    "spherical-geometry-js": "^2.0.0",
    "twilio": "^3.49.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.4.4",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.12",
    "@types/ioredis": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chalk": "^4.1.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^5.1.0",
    "ioredis-mock": "^4.21.3",
    "jest": "26.4.2",
    "jest-runner-groups": "^2.0.1",
    "mongodb-memory-server": "^6.6.7",
    "pino-pretty": "^4.2.0",
    "prettier": "^2.1.1",
    "stream-buffers": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/cache/(.*)": "<rootDir>/libs/cache/src/$1",
      "@app/cache": "<rootDir>/libs/cache/src",
      "@app/data/(.*)": "<rootDir>/libs/data/src/$1",
      "@app/data": "<rootDir>/libs/data/src",
      "@app/storage/(.*)": "<rootDir>/libs/storage/src/$1",
      "@app/storage": "<rootDir>/libs/storage/src",
      "@app/session/(.*)": "<rootDir>/libs/session/src/$1",
      "@app/session": "<rootDir>/libs/session/src",
      "@app/helpers/(.*)": "<rootDir>/libs/helpers/src/$1",
      "@app/helpers": "<rootDir>/libs/helpers/src",
      "@app/contact-verification/(.*)": "<rootDir>/libs/contact-verification/src/$1",
      "@app/contact-verification": "<rootDir>/libs/contact-verification/src",
      "@app/repository/(.*)": "<rootDir>/libs/repository/src/$1",
      "@app/repository": "<rootDir>/libs/repository/src"
    }
  }
}
