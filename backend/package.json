{
  "name": "gx-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gx-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@brazilian-utils/brazilian-utils": "^1.0.0-rc.11",
    "@google-cloud/storage": "^5.3.0",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-fastify": "^7.4.3",
    "file-type": "^15.0.0",
    "google-polyline": "^1.0.3",
    "http-errors": "^1.8.0",
    "ioredis": "^4.17.3",
    "mongoose": "^5.10.2",
    "pino": "^6.5.1",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "schemapack": "^1.4.2",
    "secure-password": "^4.0.0",
    "shortid": "^2.2.15",
    "spherical-geometry-js": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/ioredis": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "ioredis-mock": "^4.21.3",
    "jest": "26.4.2",
    "pino-pretty": "^4.2.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/services/(.*)": "<rootDir>/libs/services/src/$1",
      "@app/services": "<rootDir>/libs/services/src",
      "@app/cache/(.*)": "<rootDir>/libs/cache/src/$1",
      "@app/cache": "<rootDir>/libs/cache/src",
      "@app/data/(.*)": "<rootDir>/libs/data/src/$1",
      "@app/data": "<rootDir>/libs/data/src",
      "@app/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@app/database": "<rootDir>/libs/database/src",
      "@app/util/(.*)": "<rootDir>/libs/util/src/$1",
      "@app/util": "<rootDir>/libs/util/src",
      "@app/storage/(.*)": "<rootDir>/libs/storage/src/$1",
      "@app/storage": "<rootDir>/libs/storage/src",
      "@app/session/(.*)": "<rootDir>/libs/session/src/$1",
      "@app/session": "<rootDir>/libs/session/src",
      "@app/helpers/(.*)": "<rootDir>/libs/helpers/src/$1",
      "@app/helpers": "<rootDir>/libs/helpers/src"
    }
  }
}
