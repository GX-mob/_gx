    "rxjs": "^6.6.3",
    "schemapack": "^1.4.2",
    "secure-password": "^4.0.0",
    "shortid": "^2.2.15",
    "socket.io-redis": "^5.4.0",
    "spherical-geometry-js": "^2.0.0",
    "twilio": "^3.49.1",
    "validator": "^13.1.1"
