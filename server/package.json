    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/platform-fastify": "^7.4.4",
    "@nestjs/platform-socket.io": "^7.4.4",
    "@nestjs/websockets": "^7.4.4",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "date-fns": "^2.16.1",
    "date-fns-tz": "^1.0.10",
    "deepmerge": "^4.2.2",
    "eventemitter3": "^4.0.7",
    "extensor": "^1.0.7",
    "fast-json-stringify": "^2.2.6",
    "fastify-compress": "^3.3.0",
    "fastify-helmet": "^5.0.3",
    "fastify-multipart": "^3.2.0",
    "fastify-rate-limit": "^4.0.2",
    "file-type": "^15.0.0",
    "full-icu": "^1.3.1",
    "google-polyline": "^1.0.3",
    "http-errors": "^1.8.0",
