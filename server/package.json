  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "docker-compose up --scale e2e-testing=0",
    "dev:seed": "docker-compose run seed",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:gateway:debug": "nest start --debug 0.0.0.0:9228 --watch",
    "start:rides-flows:debug": "nest start --debug 0.0.0.0:9229 --watch rides-flows",
    "start:debug": "nest start --debug 0.0.0.0:9227 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:watch": "jest --runInBand --watch",
    "test:unit": "jest --runInBand --group=unit",
    "test:cov": "jest --runInBand --coverage",
    "test:e2e": "docker-compose run e2e-testing --abort-on-container-exit"
  },
