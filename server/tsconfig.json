{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/cache": ["libs/cache/src"],
      "@app/cache/*": ["libs/cache/src/*"],
      "@app/repositories": ["libs/repositories/src"],
      "@app/repositories/*": ["libs/repositories/src/*"],
      "@app/storage": ["libs/storage/src"],
      "@app/storage/*": ["libs/storage/src/*"],
      "@app/session": ["libs/session/src"],
      "@app/session/*": ["libs/session/src/*"],
      "@app/helpers": ["libs/helpers/src"],
      "@app/helpers/*": ["libs/helpers/src/*"],
      "@app/contact-verification": ["libs/contact-verification/src"],
      "@app/contact-verification/*": ["libs/contact-verification/src/*"],
      "@app/auth": ["libs/auth/src"],
      "@app/auth/*": ["libs/auth/src/*"],
      "@app/socket": ["libs/socket/src"],
      "@app/socket/*": ["libs/socket/src/*"],
      "@testing/testing": ["libs/testing/src"],
      "@testing/testing/*": ["libs/testing/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
